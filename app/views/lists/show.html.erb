<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path list.photo.key, height: 300, width: 400, crop: :fill %>)">
  <div class="container">
    <h1> <%= @list.name %></h1>
    <p>Félicitation, c'est un très bon choix</p>
  </div>
</div>

<div class ="container">

  <div class="cards">
    <% @list.movies.each do |movie| %>

    <div class="card-trip">
      <img src="<%= movie.poster_url%>" />
      <div class="card-trip-infos">
        <div>
          <h2><%=movie.title%></h2>
          <p><%=movie.overview%></p>
        </div>
        <h2 class="card-trip-pricing"><%=movie.rating%></h2>
      </div>
    </div>

    <% end %>
  </div>

</div>

<h1>New Bookmark</h1>
<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
