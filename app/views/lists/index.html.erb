
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path 'projo.jpg'%>)">
  <div class="container">
    <h1>Vos playlists de films comme vous ne les avez jamais vu !</h1>
    <p>Ajoutez vos films</p>
    <a class="btn btn-flat" href="">Nouvelle Playlist</a>
  </div>
</div>

<div class ="container">

  <div class="cards">
    <% @lists.each do |list| %>
    <%= link_to list_path(list) do  %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key, height: 300, width: 400, crop: :fill %>)">
        <%=list.name%>
    </div>
    <% end %>
    <%= link_to "x", list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-flat-delete" %>

    <% end %>
  </div>

  <div >
    <h1>New List</h1>
    <%= simple_form_for @list do |f| %>
      <%= f.input :name %>
       <%= f.input :photo, as: :file %>
      <%= f.submit "Add List", class: "btn btn-success" %>
    <% end %>
  </div>

</div>
